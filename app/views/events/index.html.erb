<h1>Listing events</h1>




<script>
  
  
  $(document).ready(function(){
  
  
  
  
  
		var $tabs = $("#displaymodetab").tabs(
			{
				ajaxOptions : {
					error : function(xhr, status, index, anchor) {
						$(anchor.hash).html(
								"Couldn't load this tab. We'll try to fix this as soon as possible. "
										+ "If this wouldn't be a demo.");
					}

				}
			});	
  
  
      // page is now ready, initialize the calendar...
		  $('#calendar').fullCalendar({
			
			
			header : {
			left : 'prev,next today',
			center : 'title',
			right : 'month,agendaWeek,agendaDay'
			},

			aspectRatio : 2
			,	
			
			 eventSources: [

				[
				{
					color: 'yellow',
					title  : 'event1',
					start  : '2013-01-10'
				},
				{
					title  : 'event2',
					start  : '2013-01-10',
					end    : '2013-01-13'
				},
				{
					title  : 'event3',
					start  : '2013-01-14 12:30:00',
					allDay : false // will make the time show
				}
				]
				
				/*,
				// your event source
				{
					url: '/myfeed.php',
					type: 'POST',
					data: {
						custom_param1: 'something',
						custom_param2: 'somethingelse'
					},
					error: function() {
						alert('there was an error while fetching events!');
					},
					color: 'yellow',   // a non-ajax option
					textColor: 'black' // a non-ajax option
				}*/

				// any other sources...

			]
			
			
	});
  });
</script>







<div id="searchbar">
 <%= form_tag :controller => 'events', :action => 'search' do %>
  <p>
    Textsuche: -> 
    <%= text_field_tag :search, params[:search], :id => 'search_field' %>
  </p>
  <p>
    Zeitraumanfang: 
    <%= datetime_select :dtstart, params[:dtstart], :id => 'date_start' %>
  </p>
  <p>
    Zeitraumende: 
    <%= datetime_select :dtend, params[:dtend], :id => 'date_end' =%>
  </p>
    <%= hidden_field_tag :uid, params[:uid] %>
    <%= submit_tag "Search", :name => nil %> 
    <%= link_to_function "Clear", "$('search_field').clear()" %>
 <% end %> 
</div>
